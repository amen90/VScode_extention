{
  "name": "stm32-package-manager",
  "displayName": "STM32 Package Manager",
  "description": "Import and manage STM32 packages with board selection and project templates",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stm32PackageManager.importPackage",
        "title": "Import STM32 Package",
        "category": "STM32"
      },
      {
        "command": "stm32PackageManager.openPackageManager",
        "title": "Open Package Manager",
        "category": "STM32"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "stm32PackageManager.importPackage",
          "when": "true"
        },
        {
          "command": "stm32PackageManager.openPackageManager",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stm32-package-manager",
          "title": "STM32 Package Manager",
          "icon": "$(chip)"
        }
      ]
    },
    "views": {
      "stm32-package-manager": [
        {
          "id": "stm32PackageExplorer",
          "name": "Package Explorer",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/xml2js": "^0.4.14",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fs-extra": "^11.1.0",
    "path": "^0.12.7",
    "xml2js": "^0.6.2"
  }
}
